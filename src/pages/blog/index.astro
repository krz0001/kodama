---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { Markdown } from 'astro/components';
const data = Astro.fetchContent('../blog/*.md'); 
---

<BaseLayout>
    <section class="prose prose-invert mx-auto">
        <h2>Blog</h2> 

        {data.slice(0, 3).map((post) => (
            <article class="bg-violet-700/20 p-4 my-4 rounded-md ">
                <h3 class="mt-0">{post.title}</h3>
                <p> by {post.author} Â· {post.date}</p>
                <a href={post.url}>Read more</a>
            </article>
        ))} 
    </section>
</BaseLayout>