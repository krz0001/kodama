---
import { DateTime } from "luxon";
import { Icon } from 'astro-icon'
const { blogpost } = Astro.props;
const lang = blogpost.url.split("/")[2];
---

<a href={blogpost.url} class="block bg-violet-900/20 hover:bg-violet-900/70 transition p-4 my-4 rounded-md no-underline	">
    <h3 class="mt-0">{blogpost.title}</h3>
    <span class="flex font-normal"> by {blogpost.author} · Published {DateTime.fromISO(blogpost.date).setLocale('en').toRelativeCalendar()} · { lang == 'jp' ? <Icon class="h-8 w-8 mx-2" name="emojione:flag-for-japan" /> : <Icon class="h-8 w-8 mx-2" name="emojione:flag-for-united-states" />}</span>
    
</a>