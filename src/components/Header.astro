  <Navbar/>
</header>


<script type="module">
import FOG from 'vanta/dist/vanta.fog.min'

FOG({
  el: "#largeHeader",
  mouseControls: true,
  touchControls: true,
  gyroControls: false,
  minHeight: 200.00,
  minWidth: 200.00,
  highlightColor: 0x7262AF,
  midtoneColor: 0x211458,
  lowlightColor: 0x33228e,
  baseColor: 0x0
})
</script>

<style>

#largeHeader h1{
  text-shadow: 0px 0px 20px #8b6abd;
  font-size: clamp(2rem, -0.0930rem + 9.3023vw, 4.5rem);  
